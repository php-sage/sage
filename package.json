{
  "private": true,
  "devDependencies": {
    "npm-watch": "^0",
    "sass": "^1",
    "uglify-js": "^3"
  },
  "watch": {
    "compile-js": "src/resources/base.js",
    "compile-css": "src/resources/css/*.scss"
  },
  "scripts": {
    "sass-dev": "sass --watch --update --no-source-map --style=expanded src/resources/css/themes/:src/resources/compiled/",
    "sass-dev-c": "sass --watch --update --no-source-map --style=compressed src/resources/css/themes/:src/resources/compiled/",
    "compile-css": "sass --style=compressed --no-source-map src/resources/css/themes/:src/resources/compiled/",
    "compile-js": "uglifyjs src/resources/js/base.js -cm --toplevel --mangle-props -o src/resources/compiled/sage.js",
    "watch": "npm-watch",
    "build": "npm run compile-js; npm run compile-css"
  }
}
